<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="#000" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/title_descriptionstats"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/editTextSayilar"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/textViewdescAciklama"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext"
        android:ems="10"
        android:gravity="center"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btn_descStatHesapla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ListView_dsc_stat_description"
        android:layout_alignRight="@+id/view1"
        android:layout_alignTop="@+id/editTextSayilar"
        android:text="@string/title_descriptionstats" />

    <ListView
        android:id="@+id/ListView_dsc_stat_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn_descStatHesapla"
        android:layout_toRightOf="@+id/editTextSayilar" >
    </ListView>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_above="@+id/editTextSayilar"
        android:layout_alignLeft="@+id/editTextSayilar"
        android:background="#000" />

    <TextView
        android:id="@+id/textViewdescAciklama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view2"
        android:layout_below="@+id/view1"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/desc_aciklama"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>