<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <color name="turkuaz">#51B1A3</color>
    <color name="grimsi">#C8D2D0</color>
    <color name="koyugri">#636E6C</color>

    <style name="NotificationTitle">
        <item name="android:textColor">@color/sol_menu_baslik_rengi</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="matrislinearlayoutrowstyle">
        <item name="android:padding">5dp</item>
        <item name="android:weightSum">60</item>
    </style>

    <style name="matriseditstyle">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/edittext</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="baslikStyle1">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="baslikStyle2">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="baslikStyle3">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="icerikStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="solmenu_titleStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
    </style>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

</resources>